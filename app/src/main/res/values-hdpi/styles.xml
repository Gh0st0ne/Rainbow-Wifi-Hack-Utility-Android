<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/textColor0</item>
    </style>

    <!-- Fragment style -->
    <style name="FragmentsTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/delius_unicase</item>
    </style>

    <!-- Button custom 0 -->
    <style name="ButtonTheme0" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/buttonBackground</item>
    </style>

    <!-- Button custom 1 -->
    <style name="ButtonTheme1" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/buttonBackground1</item>
    </style>

    <!-- Button custom 2 -->
    <style name="ButtonTheme2" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/buttonBackground2</item>
    </style>

</resources>
